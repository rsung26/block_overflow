<form action="/users/posts/<%=@post.id%>/edit" method="post">
	<label for="title">Title:</label>
	<input type="text" name="title" value= "<%= @post.title %>">
	<input type="radio" name="language" value="text">Plain Text</input>
	<input type="radio" name="language" value="ruby">Ruby</input>
	<textarea name="body" cols="70" rows="10"><%= @post.body %></textarea>
	<input type="submit">
</form>