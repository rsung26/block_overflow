<!-- Show All Posts the User has made -->
<h1 class="user">Posts <%= @user.username %> has made:</h1>

<table>
	<thead>
		<td>Title</td>
		<td>View</td>
		<td>Edit</td>
		<td>Delete</td>
	</thead>	

	<tbody>
		<% @user.posts.each do |post| %>
		<tr>
			<td><%=post.title%></td>
			<td><a href="/user/<%=@user.id%>/post/<%=post.id%>/view">View</a></td>
			<td><a href="/user/<%=@user.id%>/post/<%=post.id%>/edit">Edit</a></td>
			<td><a href="/user/<%=@user.id%>/post/<%=post.id%>/delete">Delete</a></td>
		</tr>
		<% end %>
	</tbody>
</table>

<h1>Favorite Posts:</h1>
<table>
	<thead>
		<td>Title</td>
		<td>Body</td>
	</thead>	

	<tbody>
		<% @user.faves.each do |post| %>
		<tr>
			<td><%=post.title%></td>
			<td><%=post.body%></td>
		</tr>
		<% end %>
	</tbody>
</table>